<h1> New Sign Up Form</h1>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Login Form</title>
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="../../assets/styles/newcss.css" type="text/css">

  <!--[if lt IE 9]><script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
</head>
<body>
<section class="container">

  <div class="login">
    <h1>Register</h1>
    <form method="post" action="/user/create" class="form-signin">



      <p><input type="text" name="name" value="" placeholder="Username"></p>
      <p><input type="text" name="regNo" value="" placeholder="Register Number"></p>
      <p><input type="text" name="email" value="" placeholder="Email"></p>
      <p><input type="text" name="branch" value="" placeholder="Branch"></p>
      <p><input type="text" name="role" value="" placeholder="Role"></p>
      <p><input type="text" name="position" value="" placeholder="Position"></p>
      <p><input type="text" name="url" value="" placeholder="Url"></p>
      <p><input type="text" name="contact" value="" placeholder="Contact Number"></p>
      <p><input type="text" name="domain" value="" placeholder="Domain"></p>
      <p><input type="password" name="password" value="" placeholder="Password"></p>
      <p><input type="password" name="confirmation" value="" placeholder="Confirm Password"></p>

      <p class="remember_me">
        <label>
          <input type="checkbox" name="remember_me" id="remember_me">
          Remember me on this computer
        </label>
      </p>
      <input type="submit" name="commit" value="Register">
      <input type="hidden" name="_csrf" value="<%= _csrf %>">
    </form>
  </div>

  <div class="login-help">
    <p>Forgot your password? <a href="index.html">Click here to reset it</a>.</p>
  </div>
</section>


</body>
</html>



